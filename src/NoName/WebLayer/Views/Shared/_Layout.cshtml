@using WebLayer.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title HolyStream</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/holy")

</head>
<body>
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <ul class="nav nav-pills">
                <li> @Html.ActionLink("Home", "Index", "Home") </li>
                <li>
                    <a href="@Url.Action("Index", "Song")">
                        Songs
                        @{
                            Html.RenderAction("SongsCount", "Song");
                        }
                    </a>
                </li>
                <li>@Html.ActionLink("Playlists", "Index", "Playlist")</li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="False">
                        Logs
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("System Logs", "Index", "Logs")</li>
                        <li>@Html.ActionLink("Media Logs", "MediaLog", "Logs")</li>
                    </ul>
                </li>
                <li>
                    @{
                        Html.RenderPartial("SearchPartial", new SearchModel());
                    }
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="col-xs-12">

    <div class="row">
        @{
            Html.RenderPartial("_UserNavbar");
        }
        <div class="col-md-11" id="body">
            @RenderBody()
        </div>

    </div>
    <hr/>
    <footer class="text-center">
        <div class="container">
            <div class="row">
                <p>HolySquad © 2015 - @DateTime.Now.Year</p>
            </div>
        </div>
    </footer>
    <div class="row playerBar">
        @{
            Html.RenderPartial("_Player");
        }
    </div>


</div>

<script>
    (function(i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r;
        i[r] = i[r] || function() {
            (i[r].q = i[r].q || []).push(arguments);
        }, i[r].l = 1 * new Date();
        a = s.createElement(o),
            m = s.getElementsByTagName(o)[0];
        a.async = 1;
        a.src = g;
        m.parentNode.insertBefore(a, m);
    })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

    ga('create', 'UA-73028518-1', 'auto');
    ga('send', 'pageview');

</script>

@RenderSection("scripts", false)
</body>
</html>